@model PhoneStore.Models.ViewModels.StoreViewModel
@{
    ViewData["Title"] = "المتجر";
}

<section id="home" class="shop-hero d-flex flex-column gap-4 justify-content-center" style="min-height: 40vh;">
    <div class="container">
        <div class="heading" data-aos="fade-up" data-aos-delay="100">
            <div class="row g-4 justify-content-center align-items-center">
                <div class="col-lg-8">
                    <div class="content mt-5">
                        <h2 class="mb-3 text-white">متجرنا</h2>
                        <p>
                            نوفر لك مجموعة مميزة من قطع غيار الموبايلات بجودة موثوقة وأسعار تنافسية.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="parts py-5" id="products">
    <div class="container">

        <div class="row mb-5" data-aos="fade-up">
            <div class="col-12">
                <div class="filters-card p-4 bg-white rounded-4 shadow-sm border">

                    <form asp-action="Index" method="get" class="mb-4">
                        @if (Model.SelectedCompanyId.HasValue)
                        {
                            <input type="hidden" name="companyId" value="@Model.SelectedCompanyId" />
                        }
                        @if (Model.SelectedCategoryId.HasValue)
                        {
                            <input type="hidden" name="categoryId" value="@Model.SelectedCategoryId" />
                        }

                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-white border-start-0 text-primary" style="border-radius:0 5px 5px 0 ;"><i class="fas fa-search"></i></span>
                            <input type="text" name="searchString" value="@Model.SearchString" class="form-control border-start-0" placeholder="ابحث عن منتج (مثل: شاشة ايفون 11)...">
                            <button style="border-radius: 5px 0 0 5px ;" class="btn btn-primary px-4" type="submit">بحث</button>
                        </div>
                    </form>

                    <div class="mb-4">
                        <h6 class="fw-bold text-muted mb-3 small text-uppercase ls-1"><i class="fas fa-building me-2"></i> الشركات</h6>
                        <div class="d-flex flex-wrap gap-2 filter-scroll">
                            <a asp-action="Index"
                               asp-route-categoryId="@Model.SelectedCategoryId"
                               asp-route-searchString="@Model.SearchString"
                               class="btn btn-sm rounded-pill px-3 py-2 fw-bold transition-all @(Model.SelectedCompanyId == null ? "btn-primary active-filter" : "btn-light text-muted border")">
                                الكل
                            </a>
                            @foreach (var company in Model.Companies)
                            {
                                <a asp-action="Index"
                                   asp-route-companyId="@company.Id"
                                   asp-route-categoryId="@Model.SelectedCategoryId"
                                   asp-route-searchString="@Model.SearchString"
                                   class="btn btn-sm rounded-pill px-3 py-2 fw-bold transition-all @(Model.SelectedCompanyId == company.Id ? "btn-primary active-filter" : "btn-light text-muted border")">
                                    @company.Name
                                </a>
                            }
                        </div>
                    </div>

                    <div>
                        <h6 class="fw-bold text-muted mb-3 small text-uppercase ls-1"><i class="fas fa-tags me-2"></i> الأقسام</h6>
                        <div class="d-flex flex-wrap gap-2 filter-scroll">
                            <a asp-action="Index"
                               asp-route-companyId="@Model.SelectedCompanyId"
                               asp-route-searchString="@Model.SearchString"
                               class="btn btn-sm rounded-pill px-3 py-2 fw-bold transition-all @(Model.SelectedCategoryId == null ? "btn-dark active-filter" : "btn-light text-muted border")">
                                كل الأقسام
                            </a>
                            @foreach (var category in Model.Categories)
                            {
                                <a asp-action="Index"
                                   asp-route-companyId="@Model.SelectedCompanyId"
                                   asp-route-categoryId="@category.Id"
                                   asp-route-searchString="@Model.SearchString"
                                   class="btn btn-sm rounded-pill px-3 py-2 fw-bold transition-all @(Model.SelectedCategoryId == category.Id ? "btn-dark active-filter" : "btn-light text-muted border")">
                                    @category.Name
                                </a>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap">
            <h4 class="fw-bold text-dark mb-0">
                @if (!string.IsNullOrEmpty(Model.SearchString))
                {
                    <span>نتائج البحث عن: "<span class="text-primary">@Model.SearchString</span>"</span>
                }
                else
                {
                    @(Model.SelectedCategoryId != null ? Model.Categories.FirstOrDefault(c => c.Id == Model.SelectedCategoryId)?.Name : "جميع المنتجات")
                }

                @if (Model.SelectedCompanyId != null)
                {
                    <span class="text-muted fs-5 fw-normal"> / @Model.Companies.FirstOrDefault(c => c.Id == Model.SelectedCompanyId)?.Name</span>
                }
            </h4>
            <span class="text-muted small">@Model.Products.Count() منتجات متاحة</span>
        </div>

        <div class="row g-4" id="products-container">
            @if (!Model.Products.Any())
            {
                <div class="col-12">
                    <div class="text-center py-5 bg-light rounded-4 border border-dashed">
                        <div class="mb-3 text-muted opacity-50">
                            <i class="fas fa-search fa-3x"></i>
                        </div>
                        <h5 class="text-muted">لا توجد منتجات تطابق بحثك حالياً.</h5>
                        <a asp-action="Index" class="btn btn-outline-primary mt-3 rounded-pill px-4">عرض كل المنتجات</a>
                    </div>
                </div>
            }

            @foreach (var item in Model.Products)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="product-card position-relative overflow-hidden h-100 bg-white border rounded-4 shadow-hover transition-all">

                        @if (item.DiscountPercentage > 0)
                        {
                            <div class="position-absolute top-0 end-0 m-2 bg-danger text-white px-2 py-1 rounded-3 small fw-bold z-2 shadow-sm">
                                -@item.DiscountPercentage%
                            </div>
                        }

                        <div class="wishlist position-absolute top-0 start-0 z-2 m-2">
                            <button class="btn btn-light rounded-circle shadow-sm p-0 d-flex align-items-center justify-content-center btn-toggle-wishlist"
                                    data-id="@item.Id"
                                    style="width: 35px; height: 35px;"
                                    title="@(Model.WishlistIds.Contains(item.Id) ? "إزالة من المفضلة" : "إضافة للمفضلة")">
                                @if (Model.WishlistIds.Contains(item.Id))
                                {
                                    <i class="fa-solid fa-heart text-danger"></i>
                                }
                                else
                                {
                                    <i class="fa-regular fa-heart text-muted"></i>
                                }
                            </button>
                        </div>

                        <div class="product-img bg-light position-relative" style="height: 220px; display: flex; align-items: center; justify-content: center; padding: 1rem;">
                            <a asp-controller="Store" asp-action="Details" asp-route-id="@item.Id" class="d-block w-100 h-100">
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/400x400/EEE/513061?text=No+Image" : item.ImageUrl)"
                                     alt="@item.Name"
                                     class="img-fluid w-100 h-100 object-fit-contain transition-transform">
                            </a>
                        </div>

                        <div class="product-info p-3">
                            <div class="mb-1">
                                <span class="text-uppercase text-muted x-small fw-bold">@item.Company?.Name</span>
                                @if (item.Category != null)
                                {
                                    <span class="text-muted x-small"> • @item.Category.Name</span>
                                }
                            </div>
                            <h6 class="fw-bold text-dark mb-2 text-truncate">
                                <a asp-controller="Store" asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                    @item.Name
                                </a>
                            </h6>

                            <div class="d-flex justify-content-between align-items-end mt-3">
                                <div class="price">
                                    @if (item.OldPrice.HasValue && item.OldPrice > item.Price)
                                    {
                                        <div class="text-muted text-decoration-line-through x-small">@item.OldPrice.Value.ToString("C", new System.Globalization.CultureInfo("ar-JO"))</div>
                                        <div class="text-danger fw-bold">@item.Price.ToString("C", new System.Globalization.CultureInfo("ar-JO"))</div>
                                    }
                                    else
                                    {
                                        <div class="fw-bold text-primary">@item.Price.ToString("C", new System.Globalization.CultureInfo("ar-JO"))</div>
                                    }
                                </div>
                                <button class="btn btn-primary rounded-circle p-0 d-flex align-items-center justify-content-center btn-add-to-cart shadow-sm"
                                        data-id="@item.Id"
                                        style="width: 38px; height: 38px;">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .ls-1 {
        letter-spacing: 1px;
    }

    .x-small {
        font-size: 0.75rem;
    }

    .transition-all {
        transition: all 0.3s ease;
    }

    .active-filter {
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        transform: translateY(-1px);
    }

    @@media (max-width: 768px) {
        .filter-scroll

    {
        flex-wrap: nowrap;
        overflow-x: auto;
        padding-bottom: 5px;
        -webkit-overflow-scrolling: touch;
    }

    .filter-scroll::-webkit-scrollbar {
        height: 4px;
    }

    .filter-scroll::-webkit-scrollbar-thumb {
        background: #ccc;
        border-radius: 4px;
    }

    }

    .shadow-hover:hover {
        box-shadow: 0 10px 25px rgba(0,0,0,0.08) !important;
        transform: translateY(-5px);
    }

    .product-card:hover .transition-transform {
        transform: scale(1.08);
    }

    .btn-primary {
        background-color: #513061;
        border-color: #513061;
    }

        .btn-primary:hover {
            background-color: #432552;
            border-color: #432552;
        }

    .text-primary {
        color: #513061 !important;
    }

    .btn-dark {
        background-color: #212529;
        border-color: #212529;
    }
</style>