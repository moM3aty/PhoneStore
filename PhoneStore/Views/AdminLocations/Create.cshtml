@model PhoneStore.Models.DeliveryLocation

@{
    ViewData["Title"] = "إضافة منطقة توصيل";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">إضافة منطقة توصيل جديدة</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="LocationName" class="form-label"></label>
                        <input asp-for="LocationName" class="form-control" />
                        <span asp-validation-for="LocationName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DeliveryFee" class="form-label"></label>
                        <input asp-for="DeliveryFee" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="DeliveryFee" class="text-danger"></span>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i> حفظ
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                            @* تم حذف المفتاح *@
                            <i class="fas fa-times me-2"></i> إلغاء
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>