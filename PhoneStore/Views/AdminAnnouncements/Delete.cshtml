@model PhoneStore.Models.Announcement

@{
    ViewData["Title"] = "حذف الإعلان";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">تأكيد الحذف</h5>
            </div>
            <div class="card-body">
                <h3 class="text-danger">هل أنت متأكد أنك تريد حذف هذا الإعلان؟</h3>

                <div class="alert alert-light border mt-3">
                    <p class="mb-1"><strong>نص الإعلان:</strong> @Model.Message</p>
                    <p class="mb-0"><strong>الحالة:</strong> @(Model.IsActive ? "نشط" : "غير نشط")</p>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i> نعم، احذف
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-times me-2"></i> إلغاء
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>