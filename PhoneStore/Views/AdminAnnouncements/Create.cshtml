@model PhoneStore.Models.Announcement

@{
    ViewData["Title"] = "إضافة إعلان";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">إضافة إعلان جديد</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Message" class="form-label"></label>
                        <textarea asp-for="Message" class="form-control" rows="3" placeholder="اكتب نص الإعلان هنا..."></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label" asp-for="IsActive"></label>
                        <small class="text-muted d-block">عند التفعيل، سيظهر هذا الإعلان في أعلى الموقع وسيتم إيقاف أي إعلان آخر.</small>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">حفظ</button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">إلغاء</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>