@model IEnumerable<PhoneStore.Models.Order>
@using PhoneStore.Extensions

@{
    ViewData["Title"] = "إدارة الطلبات";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var culture = new System.Globalization.CultureInfo("ar-JO");
    var selectedStatus = ViewData["SelectedStatus"] as OrderStatus?;
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
        <h5 class="mb-0 text-primary fw-bold">سجل الطلبات (@Model.Count())</h5>
        <form asp-action="Index" method="get" class="d-flex gap-2">
            <select name="status" class="form-select form-select-sm" onchange="this.form.submit()">
                <option value="">-- كل الحالات --</option>
                @foreach (var status in Enum.GetValues<OrderStatus>())
                {
                    <option value="@status" selected="@(status == selectedStatus)">@status.GetDisplayName()</option>
                }
            </select>
            @if (selectedStatus.HasValue)
            {
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm" title="إلغاء الفلتر">
                    <i class="fas fa-times"></i>
                </a>
            }
        </form>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 text-center">
                <thead class="bg-light">
                    <tr>
                        <th>رقم الطلب</th>
                        <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                        <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
                        <th>@Html.DisplayNameFor(model => model.TotalAmount)</th>
                        <th style="width: 150px;">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">#@item.Id</td>
                            <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                            <td style="direction: ltr;">@item.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(item.Status)">
                                    @item.Status.GetDisplayName()
                                </span>
                            </td>
                            <td>@item.PaymentMethod.GetDisplayName()</td>
                            <td class="fw-bold">@item.TotalAmount.ToString("C", culture)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm mx-1" title="عرض التفاصيل">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm mx-1" title="حذف">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "bg-warning text-dark",
            OrderStatus.Processing => "bg-info text-dark",
            OrderStatus.Shipped => "bg-primary",
            OrderStatus.Completed => "bg-success",
            OrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}