@model IEnumerable<PhoneStore.Models.Product>

@{
    ViewData["Title"] = "قائمة المفضلات";
    var culture = new System.Globalization.CultureInfo("ar-JO");
}

<section class="py-5 mt-5 bg-light" id="wishlist" style="min-height: 80vh;">
    <div class="container py-4">

        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h2 class="fw-bold text-dark mb-1">
                    منتجاتي المفضلة
                </h2>
                <p class="text-muted mb-0">لديك @Model.Count() منتجات في قائمة الأمنيات</p>
            </div>
            <a asp-controller="Store" asp-action="Index" class="btn btn-outline-dark rounded-pill px-4">
                متابعة التسوق
            </a>
        </div>

        <div class="row g-4" id="wishlist-body">
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch" data-aos="fade-up">
                        <div class="card w-100 border-0 rounded-4 product-wishlist-card h-100">

                            <button class="btn-remove-wishlist btn-remove-from-wishlist-page"
                                    data-id="@item.Id"
                                    title="إزالة من المفضلة">
                                <i class="fas fa-times"></i>
                            </button>

                            <div class="card-img-top position-relative p-4 d-flex align-items-center justify-content-center bg-white rounded-top-4" style="height: 260px;">
                                <a asp-controller="Store" asp-action="Details" asp-route-id="@item.Id" class="d-block w-100 h-100">
                                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/400x400/EEE/513061?text=No+Image" : item.ImageUrl)"
                                         alt="@item.Name"
                                         class="img-fluid w-100 h-100 object-fit-contain hover-scale">
                                </a>
                                @if (item.DiscountPercentage > 0)
                                {
                                    <span class="badge bg-danger position-absolute bottom-0 start-0 m-3 px-3 py-2 rounded-pill shadow-sm">
                                        خصم @item.DiscountPercentage%
                                    </span>
                                }
                            </div>

                            <div class="card-body d-flex flex-column p-4 bg-white rounded-bottom-4">
                                <div class="mb-2">
                                    <span class="text-uppercase text-muted small fw-bold letter-spacing-1">@item.Company?.Name</span>
                                </div>

                                <h5 class="card-title fw-bold mb-2 text-truncate">
                                    <a asp-controller="Store" asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark stretched-link">
                                        @item.Name
                                    </a>
                                </h5>

                                <div class="mt-auto pt-3 border-top">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div class="price-wrapper">
                                            @if (item.OldPrice.HasValue && item.OldPrice > item.Price)
                                            {
                                                <div class="text-muted text-decoration-line-through small">@item.OldPrice.Value.ToString("C", culture)</div>
                                                <div class="text-danger fw-bold fs-5">@item.Price.ToString("C", culture)</div>
                                            }
                                            else
                                            {
                                                <div class="fw-bold fs-5 text-dark">@item.Price.ToString("C", culture)</div>
                                            }
                                        </div>
                                    </div>

                                    <button class="btn btn-dark w-100 rounded-pill btn-add-to-cart py-2 fw-bold position-relative z-2" data-id="@item.Id">
                                        <i class="fas fa-shopping-bag me-2"></i> إضافة للسلة
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="text-center py-5 bg-white rounded-4 shadow-sm">
                        <div class="mb-4">
                            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                                <i class="far fa-heart fa-3x text-secondary opacity-50"></i>
                            </div>
                        </div>
                        <h3 class="fw-bold text-dark">قائمة أمنياتك فارغة</h3>
                        <p class="text-muted mb-4">استكشف متجرنا واجمع المنتجات التي تحبها هنا.</p>
                        <a asp-controller="Store" asp-action="Index" class="btn btn-primary px-5 py-2 rounded-pill">
                            ابدأ التسوق
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    /* تصميم الكارت */
    .product-wishlist-card {
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }

        .product-wishlist-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        }

    /* تأثير الصورة */
    .hover-scale {
        transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .product-wishlist-card:hover .hover-scale {
        transform: scale(1.08);
    }

    /* زر الحذف */
    .btn-remove-wishlist {
        position: absolute;
        top: 15px;
        right: 15px;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: white;
        border: 1px solid #eee;
        color: #999;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        z-index: 10;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

        .btn-remove-wishlist:hover {
            background: #dc3545;
            color: white;
            border-color: #dc3545;
            transform: rotate(90deg);
        }

    /* تباعد الأحرف */
    .letter-spacing-1 {
        letter-spacing: 1px;
    }

    /* تخصيص الأزرار */
    .btn-dark {
        background-color: #212529;
        border-color: #212529;
        transition: all 0.3s;
    }

        .btn-dark:hover {
            background-color: #513061; /* لون البراند عند التحويم */
            border-color: #513061;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(81, 48, 97, 0.3);
        }

    /* تخصيص رابط الكارت */
    .stretched-link::after {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1;
        content: "";
    }

    /* التأكد من أن الأزرار قابلة للنقر فوق الرابط الممتد */
    .position-relative.z-2 {
        z-index: 2;
    }
</style>