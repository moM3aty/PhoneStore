@model PhoneStore.Models.ViewModels.CartViewModel

@{
    ViewData["Title"] = "سلة التسوق";
    var culture = new System.Globalization.CultureInfo("ar-JO");
}

<section class="py-5 mt-5" id="cart">
    <div class="container">
        <h2 class="mb-5 text-center py-5" data-aos="fade-up">سلة التسوق</h2>

        @if (Model.CartItems.Any())
        {
            <div class="table-responsive">
                <table class="table cart-table mt-5 align-middle text-center" data-aos="fade-up">
                    <thead>
                        <tr>
                            <th>الصورة</th>
                            <th>المنتج</th>
                            <th>الخيارات</th> <!-- عمود جديد -->
                            <th>السعر</th>
                            <th>الكمية</th>
                            <th>الإجمالي</th>
                            <th>إزالة</th>
                        </tr>
                    </thead>
                    <tbody id="cart-body">
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>
                                    <img src="@(string.IsNullOrEmpty(item.Product.ImageUrl) ? "https://placehold.co/100x100/EEE/513061?text=No+Image" : item.Product.ImageUrl)"
                                         alt="@item.Product.Name" class="rounded border" style="width: 70px; height: 70px; object-fit: cover;">
                                </td>
                                <td class="fw-bold">@item.Product.Name</td>
                                <td>
                                    <!-- عرض الخيارات المختارة -->
                                    @if (!string.IsNullOrEmpty(item.SelectedColor))
                                    {
                                        <span class="badge bg-light text-dark border me-1">اللون: @item.SelectedColor</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.SelectedType))
                                    {
                                        <span class="badge bg-light text-dark border">النوع: @item.SelectedType</span>
                                    }
                                </td>
                                <td>@item.Product.Price.ToString("C", culture)</td>
                                <td>
                                    <div class="qty-control d-flex justify-content-center align-items-center gap-2">
                                        <button class="btn btn-outline-secondary btn-sm btn-update-quantity" data-id="@item.Product.Id" data-qty="@(item.Quantity - 1)">-</button>
                                        <span class="fw-bold">@item.Quantity</span>
                                        <button class="btn btn-outline-secondary btn-sm btn-update-quantity" data-id="@item.Product.Id" data-qty="@(item.Quantity + 1)">+</button>
                                    </div>
                                </td>
                                <td class="item-total fw-bold text-primary">@item.Subtotal.ToString("C", culture)</td>
                                <td>
                                    <button class="btn btn-link text-danger btn-remove-from-cart" data-id="@item.Product.Id">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4 flex-column flex-md-row gap-3 p-4 bg-light rounded-3">
                <div class="cart-total fs-4">الإجمالي: <span id="cart-total" class="fw-bold text-primary">@Model.TotalAmount.ToString("C", culture)</span></div>
                <a asp-controller="Cart" asp-action="Checkout" class="btn btn-primary btn-lg px-5 rounded-pill">
                    المتابعة للدفع <i class="fas fa-arrow-left ms-2"></i>
                </a>
            </div>
        }
        else
        {
            <div class="text-center py-5" data-aos="fade-up">
                <i class="fas fa-shopping-cart fa-5x text-muted mb-4 opacity-50"></i>
                <h3 class="text-muted">سلة التسوق فارغة</h3>
                <a asp-controller="Store" asp-action="Index" class="btn btn-primary mt-3 px-4 rounded-pill">
                    تصفح المنتجات
                </a>
            </div>
        }
    </div>
</section>