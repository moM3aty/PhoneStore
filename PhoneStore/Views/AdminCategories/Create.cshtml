@model PhoneStore.Models.Category

@{
    ViewData["Title"] = "إضافة قسم جديد";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var adminKey = Context.Request.Query["key"];
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">إضافة قسم جديد</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-route-key="@adminKey">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="مثال: شاشات، بطاريات..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i> حفظ
                        </button>
                        <a asp-action="Index" asp-route-key="@adminKey" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times me-2"></i> إلغاء
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}