@model IEnumerable<PhoneStore.Models.Company>

@{
    ViewData["Title"] = "إدارة الشركات";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
        <h5 class="mb-0 text-primary fw-bold">قائمة الشركات (@Model.Count())</h5>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-2"></i> إضافة شركة جديدة
        </a>
    </div>

    <!-- الفلتر (البحث) -->
    <div class="card-body border-bottom bg-light py-3">
        <form asp-action="Index" method="get" class="row g-2 align-items-center">
            <div class="col-auto">
                <label class="col-form-label fw-bold">بحث:</label>
            </div>
            <div class="col-md-4">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="اسم الشركة..." />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-secondary" title="بحث">
                    <i class="fas fa-search"></i>
                </button>
                @if (ViewData["CurrentFilter"] != null)
                {
                    <a asp-action="Index" class="btn btn-outline-secondary ms-1" title="إلغاء الفلتر">
                        <i class="fas fa-times"></i>
                    </a>
                }
            </div>
        </form>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 text-center">
                <thead class="bg-light">
                    <tr>
                        <th>الصورة (اللوجو)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>عدد المنتجات</th>
                        <th style="width: 150px;">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="fas fa-search-minus fa-3x mb-3 d-block"></i>
                                لا توجد شركات تطابق بحثك.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? $"https://placehold.co/100x50/EEE/513061?text={item.Name}" : item.ImageUrl)"
                                         alt="@item.Name"
                                         style="width: 80px; height: 40px; object-fit: contain; border-radius: 4px; border: 1px solid #dee2e6; background: #fff;" />
                                </td>
                                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td><span class="badge bg-secondary">@item.Products.Count</span></td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm mx-1" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm mx-1" title="حذف">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>